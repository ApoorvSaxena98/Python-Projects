import random
from colorama import Fore, Back, Style

a = ["Stone", "Paper", "Scissor"]
computer = random.choice(a)
player = input("Enter your choice: ")

if player == "Stone":
    if computer == "Stone":
        print("Tie")
    elif computer == "Paper":
        #print("You loose! :-( ", computer, "covers", player)     # For normal text
        print(Fore.LIGHTBLACK_EX + Back.LIGHTRED_EX + "You loose! :-)", computer, "covers", player)     # For highlighted text
    elif computer == "Scissor":
        # print("You win! :-)", player, "breaks", computer)     # For normal text
        print(Fore.LIGHTBLACK_EX + Back.LIGHTGREEN_EX + "You win! :-)", player, "breaks", computer)     # For highlighted text

elif player == "Paper":
    if computer == "Stone":
        #print("You win! :-)", player, "covers", computer)     # For normal text
        print(Fore.LIGHTBLACK_EX + Back.LIGHTGREEN_EX + "You win! :-)", player, "cuts", computer)     # For highlighted text
    elif computer == "Paper":
        print("Tie")
    elif computer == "Scissor":
        #print("You loose! :-( ", computer, "cuts", player)     # For normal text
        print(Fore.LIGHTBLACK_EX + Back.LIGHTRED_EX + "You loose! :-)", computer, "cuts", player)     # For highlighted text

elif player == "Scissor":
    if computer == "Stone":
        #print("You loose! :-( ", computer, "breaks", player)     # For normal text
        print(Fore.LIGHTBLACK_EX + Back.LIGHTRED_EX + "You loose! :-)", computer, "breaks", player)     # For highlighted text
    elif computer == "Paper":
        #print("You win! :-)", player, "cuts", computer)     # For normal text
        print(Fore.LIGHTBLACK_EX + Back.LIGHTGREEN_EX + "You win! :-)", player, "cuts", computer)     # For highlighted text
    elif computer == "Scissor":
        print("Tie")
